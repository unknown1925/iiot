const int potPin = 34;  // Potentiometer connected to GPIO34 (ADC1 channel 6)
int potValue = 0;
void setup() {
  Serial.begin(115200);
  delay(1000);
  Serial.println("System Ready: Monitoring Environment...");
}
void loop() {
  // Read potentiometer value (0 - 4095 for ESP32 ADC)
  potValue = analogRead(potPin);
  Serial.print("Potentiometer Value: ");
  Serial.println(potValue);
  // Threshold check for alert
  if (potValue > 3000) {
    Serial.println("⚠️ ALERT: Value Exceeded Threshold!");
  }
  delay(1000); // Read every 1 second
}
